model Product {
  id          Int      @id @unique @default(autoincrement())
  barcode     String   @unique
  categoryId  Int
  providerId  Int
  name        String
  description String
  coste       Float
  price       Float
  stock       Float
  unit        Unit
  expiredAt   DateTime

  category Category @relation(fields: [categoryId], references: [id])
  provider Provider @relation(fields: [providerId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Category {
  id       Int       @id @unique @default(autoincrement())
  name     String
  products Product[]

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Dishes {
  id          Int    @id @unique @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  content     Json

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
